@model TrueTestRun.Models.Request
@{
    ViewBag.Title = $"Staff EE điền form Step 8 - {Model.RequestID}";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = Session["CurrentUser"] as TrueTestRun.Models.User;
    var currentStep = ViewBag.CurrentStep as TrueTestRun.Models.WorkflowStep;
}

<div class="page-header">
    <div class="page-title-section">
        <h2 class="page-title">
            <span class="title-icon">◖</span>
            Staff EE điền form Step 8 - @Model.RequestID
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("SauTestRun", "Request")">
                        <span class="breadcrumb-icon">◉</span> Sau Test Run
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Kết quả kiểm tra xuất hàng EPE-EE</li>
            </ol>
        </nav>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="notification success">
        <div class="notification-icon">◈</div>
        <div class="notification-content">
            <div class="notification-text">@TempData["SuccessMessage"]</div>
        </div>
        <button type="button" class="notification-close" onclick="this.parentElement.style.display='none'">×</button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="notification error">
        <div class="notification-icon">◇</div>
        <div class="notification-content">
            <div class="notification-text">@TempData["ErrorMessage"]</div>
        </div>
        <button type="button" class="notification-close" onclick="this.parentElement.style.display='none'">×</button>
    </div>
}

<div class="row">
    <!-- CỘT FORM - THU NHỎ LẠI -->
    <div class="col-lg-4 col-md-5">
        @using (Html.BeginForm("ProcessApproval", "Approval", FormMethod.Post, new { id = "step8Form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("RequestID", Model.RequestID)

            <!-- FORM 1: HẠNG MỤC ĐÁNH GIÁ -->
            <div class="form-card evaluation-card">
                <div class="card-header">
                    <h5><span class="header-icon">◗</span> Hạng mục đánh giá</h5>
                    <small class="header-subtitle">評価項目</small>
                </div>
                <div class="card-body">
                    <!-- 2 Checkbox chính -->
                    <div class="checkbox-section">
                        <div class="check-group">
                            <div class="check-item">
                                <input class="check-input" type="checkbox" name="TinhNangStep8" value="true" id="chkTinhNangStep8"
                                       @(Model.Fields.FirstOrDefault(f => f.Key == "TinhNangStep8")?.Value == "true" ? "checked" : "") />
