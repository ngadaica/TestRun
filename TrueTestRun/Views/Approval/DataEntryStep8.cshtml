                </button>
                <a href="@Url.Action("SauTestRun", "Request")" class="action-btn secondary large">
                    <span class="btn-icon">◄</span>
                    Quay lại
                </a>
            </div>
        }
    </div>

    <!-- CỘT PREVIEW - MỞ RỘNG RA -->
