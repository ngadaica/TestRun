                                <label class="number-label danger">NG数：r =</label>
                                <input name="NGSo_R_LayMau_Step8" class="form-control form-control-sm" type="number" min="0"
                                       value="@(Model.Fields.FirstOrDefault(f => f.Key == "NGSo_R_LayMau_Step8")?.Value ?? "")"
                                       placeholder="r" />
                            </div>
