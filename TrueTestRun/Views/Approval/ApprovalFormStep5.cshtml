            </div>
            <div class="modal-footer">
                <div class="modal-actions">
                    <button type="button" class="action-btn secondary" data-bs-dismiss="modal">
                        <span class="btn-icon">←</span>
                        <span class="btn-text">Hủy</span>
                    </button>
                    <button type="button" class="action-btn danger" id="confirmReject">
                        <span class="btn-icon">✕</span>
                        <span class="btn-text">Xác nhận từ chối</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            function refreshPreview() {
                var t = new Date().getTime();
                $('#excelPreviewImage').attr('src', '@Url.Action("PreviewImage", "Request", new { id = Model.RequestID })' + '?t=' + t);
            }

            function collectStep5FormData() {
                var data = {};
                data['RequestID'] = '@Model.RequestID';
                data['__RequestVerificationToken'] = $('input[name="__RequestVerificationToken"]').val();

                // Checkbox → true/false
                data['LapRapStep5']   = $('#chkLapRapStep5').is(':checked') ? 'true' : 'false';
                data['TinhNangStep5'] = $('#chkTinhNangStep5').is(':checked') ? 'true' : 'false';
                data['NgoaiQuanStep5']= $('#chkNgoaiQuanStep5').is(':checked') ? 'true' : 'false';

                // Comment (optional)
                data['CommentStep5'] = $('textarea[name="CommentStep5"]').val() || '';
                return data;
            }

            let previewTimeout;
            function scheduleUpdate() {
                clearTimeout(previewTimeout);
                previewTimeout = setTimeout(function () {
                    $.ajax({
                        url: '@Url.Action("UpdateStep5Preview", "Approval")',
                        type: 'POST',
                        data: collectStep5FormData(),
                        success: function (resp) {
                            if (resp && resp.success) refreshPreview();
                        },
                        error: function (xhr) {
                            console.log('UpdateStep5Preview error:', xhr.responseText);
                        }
                    });
                }, 300);
            }

            // Bind changes for live preview
            $('#chkLapRapStep5, #chkTinhNangStep5, #chkNgoaiQuanStep5, textarea[name="CommentStep5"]').on('change input', scheduleUpdate);

            // Character counter: Step 5 comment
            $('textarea[name="CommentStep5"]').on('input', function () {
                var len = $(this).val().length;
                $(this).siblings('.form-note').find('.note-text')
                    .text(len + ' ký tự đã nhập - Comment không bắt buộc. Chỉ ghi khi cần thiết.');
            });

            // Approve submit confirm
            $('#approvalForm').on('submit', function (e) {
                var action = $(document.activeElement).val();
                if (action === 'approve') {
                    if (!confirm('Bạn có chắc chắn muốn phê duyệt đơn này không?')) {
                        e.preventDefault();
                        return false;
                    }
                }
            });

            // Reject modal actions (giữ nguyên)
            $('#btnReject').on('click', function () { $('#rejectModal').modal('show'); });
            $('#confirmReject').on('click', function () {
                var reason = $('#rejectReason').val().trim();
                if (!confirm('Bạn có chắc chắn muốn từ chối đơn này không?')) return;
                var form = $('<form>', { method: 'POST', action: '@Url.Action("ProcessApproval", "Approval")' });
                form.append($('<input>', { type: 'hidden', name: '__RequestVerificationToken', value: $('input[name="__RequestVerificationToken"]').val() }));
                form.append($('<input>', { type: 'hidden', name: 'RequestID', value: '@Model.RequestID' }));
                form.append($('<input>', { type: 'hidden', name: 'action', value: 'reject' }));
                form.append($('<input>', { type: 'hidden', name: 'Comments', value: reason }));
                $('body').append(form); form.submit();
            });

            // Initial preview sync
            scheduleUpdate();
        });
    </script>
}

