                                <input class="form-checkbox" type="checkbox" name="TinhNangStep5" value="true" id="chkTinhNangStep5"
                                       @(Model.Fields.FirstOrDefault(f => f.Key == "TinhNangStep5")?.Value == "true" ? "checked" : "") />
                                <label class="checkbox-label" for="chkTinhNangStep5">
                                    <span class="checkbox-icon">◆</span>
                                    <span class="checkbox-text">
                                        <strong>2. Tính năng</strong>
