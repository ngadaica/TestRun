@using TrueTestRun.Models
@using System.Globalization
@{
    var currentUser = Session["CurrentUser"] as User;
    var currentLanguage = Session["UserLanguage"]?.ToString() ?? "vi";
}
<!DOCTYPE html>
<html lang="@currentLanguage">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title – Test Run System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/js/bootstrap.bundle.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>

    <style>
        /* ========== JAPANESE CORPORATE LAYOUT DESIGN ========== */

        /* Professional Color Palette */
        :root {
            --corporate-blue: #1e3a8a;
            --secondary-blue: #3b82f6;
            --background-primary: #f8fafc;
            --background-secondary: #f1f5f9;
            --background-white: #ffffff;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --text-muted: #9ca3af;
            --border-light: #e5e7eb;
            --border-medium: #d1d5db;
            --shadow-subtle: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-soft: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            --shadow-medium: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            --shadow-large: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            --success-green: #059669;
            --warning-amber: #d97706;
            --error-red: #dc2626;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Hiragino Sans', 'Yu Gothic UI', 'Meiryo', sans-serif;
            background: var(--background-primary);
            color: var(--text-primary);
            line-height: 1.6;
            margin: 0;
            padding: 0;
        }

        /* ========== FIXED HEADER ALIGNMENT ========== */

        /* Professional Header */
        .corporate-header {
            background: var(--background-white);
            border-bottom: 1px solid var(--border-light);
            box-shadow: var(--shadow-soft);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 64px;
            z-index: 1000;
        }

        .header-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 100%;
            max-width: 100%;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        /* Company Branding - Fixed Left Side */
        .brand-section {
            display: flex;
            align-items: center;
            gap: 1rem;
            flex-shrink: 0; 
        }

        .company-logo {
            height: 40px;
            width: auto;
            border-radius: 6px;
            box-shadow: var(--shadow-subtle);
            flex-shrink: 0; 
        }

        .brand-text {
            display: flex;
            flex-direction: column;
            justify-content: center; 
            min-width: 0; 
        }

        .system-name {
            font-size: 1.125rem;
            font-weight: 700;
            color: var(--text-primary);
            line-height: 1.1; 
            margin-bottom: 0.125rem; 
        }

        .company-name {
            font-size: 0.75rem;
            color: var(--text-secondary);
            font-weight: 400;
            line-height: 1.1;
        }

        /* Navigation Section - Fixed Right Side */
        .nav-section {
            display: flex;
            align-items: center;
            gap: 1.5rem; 
            flex-shrink: 0; 
        }

        /* User Information - Fixed */
        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            white-space: nowrap; 
            flex-shrink: 0; 
        }

        .greeting {
            color: var(--text-primary);
            font-size: 0.875rem;
            font-weight: 500;
            line-height: 1.2; 
            display: flex;
            align-items: center;
        }

        .user-name {
            color: var(--corporate-blue);
            font-weight: 600;
        }

        /* Windows User Badge - NEW */
        .windows-user-badge {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.375rem 0.75rem;
            background: var(--background-secondary);
            border: 1px solid var(--border-light);
            border-radius: 20px;
            font-size: 0.75rem;
            color: var(--text-secondary);
        }

        .windows-icon {
            width: 14px;
            height: 14px;
            background: var(--corporate-blue);
            border-radius: 2px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.625rem;
        }

        /* User Details - NEW */
        .user-details {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 0.25rem;
        }

        .user-dept-title {
            font-size: 0.75rem;
            color: var(--text-muted);
            font-weight: 400;
        }

        /* Header Actions - Fixed */
        .header-actions {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            flex-shrink: 0;
        }

        .action-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border: 1px solid var(--border-medium);
            border-radius: 6px;
            background: var(--background-white);
            color: var(--text-secondary);
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            transition: all 0.2s ease;
        }

            .action-btn:hover {
                border-color: var(--corporate-blue);
                color: var(--corporate-blue);
                background: var(--background-secondary);
                text-decoration: none;
            }

            .action-btn.primary {
                background: var(--corporate-blue);
                color: var(--background-white);
                border-color: var(--corporate-blue);
            }

                .action-btn.primary:hover {
                    background: #1e40af;
                    color: var(--background-white);
                }

        .action-icon {
            font-size: 1rem;
        }

        /* Professional Sidebar */
        .sidebar {
            position: fixed;
            top: 64px;
            left: 0;
            width: 280px;
            height: calc(100vh - 64px);
            background: var(--background-white);
            border-right: 1px solid var(--border-light);
            overflow-y: auto;
            z-index: 900;
            box-shadow: var(--shadow-soft);
        }

        .sidebar-content {
            padding: 1.5rem 0;
        }

        /* Navigation Menu */
        .nav-menu {
            padding: 0 1rem;
        }

        .nav-section-title {
            font-size: 0.75rem;
            font-weight: 600;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin: 1.5rem 1rem 0.75rem;
        }

            .nav-section-title:first-child {
                margin-top: 0;
            }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            margin-bottom: 0.25rem;
            border-radius: 8px;
            color: var(--text-secondary);
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            transition: all 0.2s ease;
            position: relative;
        }

            .nav-item:hover {
                background: var(--background-secondary);
                color: var(--text-primary);
                text-decoration: none;
            }

            .nav-item.active {
                background: linear-gradient(135deg, var(--corporate-blue) 0%, #1e40af 100%);
                color: var(--background-white);
                font-weight: 600;
            }

                .nav-item.active::before {
                    content: '';
                    position: absolute;
                    left: 0;
                    top: 0;
                    height: 100%;
                    width: 4px;
                    background: var(--background-white);
                    border-radius: 0 4px 4px 0;
                }

        .nav-icon {
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            font-size: 1.1rem;
        }

        /* Language Selector */
        .language-selector {
            margin: 1.5rem 1rem 0;
            position: relative;
        }

        .language-toggle {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1rem;
            background: var(--background-secondary);
            border: 1px solid var(--border-light);
            border-radius: 8px;
            color: var(--text-secondary);
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
            width: 100%;
            box-sizing: border-box;
        }

            .language-toggle:hover {
                border-color: var(--border-medium);
                color: var(--text-primary);
                text-decoration: none;
            }

        .language-dropdown {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: var(--background-white);
            border: 1px solid var(--border-light);
            border-radius: 8px;
            box-shadow: var(--shadow-medium);
            margin-top: 0.5rem;
            overflow: hidden;
            z-index: 1000;
            display: none;
        }

            .language-dropdown.show {
                display: block;
            }

        .language-option {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            color: var(--text-secondary);
            text-decoration: none;
            font-size: 0.875rem;
            transition: background 0.2s ease;
            border-bottom: 1px solid var(--border-light);
        }

            .language-option:last-child {
                border-bottom: none;
            }

            .language-option:hover {
                background: var(--background-secondary);
                color: var(--text-primary);
                text-decoration: none;
            }

            .language-option.active {
                background: var(--corporate-blue);
                color: var(--background-white);
                font-weight: 600;
            }

        /* Main Content Area */
        .main-content {
            margin-left: 280px;
            margin-top: 64px;
            min-height: calc(100vh - 64px);
            background: var(--background-primary);
            position: relative; 
        }

        .content-wrapper {
            padding: 2rem;
            max-width: 100%;
            margin: 0 auto;
        }

        /* Professional Footer (NON-sticky, stays at bottom of page content) */
        .corporate-footer {
            position: absolute; 
            right: 2rem;
            bottom: 1rem;
            background: transparent;
            color: #1e3a8a; 
            font-size: 0.75rem;
            z-index: 10;
            pointer-events: none; 
            margin: 0;
            width: auto;
            left: auto;
        }

        /* Mobile Responsiveness */
        @@media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

                .sidebar.mobile-open {
                    transform: translateX(0);
                }

            .main-content {
                margin-left: 0;
            }

            .mobile-menu-btn {
                display: flex;
                align-items: center;
                justify-content: center;
                width: 40px;
                height: 40px;
                border: 1px solid var(--border-light);
                border-radius: 6px;
                background: var(--background-white);
                color: var(--text-secondary);
                cursor: pointer;
                transition: all 0.2s ease;
            }

                .mobile-menu-btn:hover {
                    border-color: var(--border-medium);
                    color: var(--text-primary);
                }

            .brand-text {
                display: none;
            }
        }

        @@media (max-width: 768px) {
            .header-content {
                padding: 0 1rem;
            }

            .content-wrapper {
                padding: 1rem;
            }

            .user-info .greeting {
                display: none;
            }

            .user-details {
                display: none;
            }

            .windows-user-badge {
                display: none;
            }

            .nav-section {
                gap: 1rem;
            }
        }

        @@media (max-width: 576px) {
            .company-logo {
                height: 32px;
            }

            .system-name {
                font-size: 1rem;
            }

            .action-btn {
                padding: 0.5rem 0.75rem;
                font-size: 0.8rem;
            }
        }

        /* Mobile menu overlay */
        .mobile-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 850;
            display: none;
        }

            .mobile-overlay.show {
                display: block;
            }

        /* Hidden on desktop */
        .mobile-menu-btn {
            display: none;
        }

        /* Animation for navigation items */
        .nav-item {
            animation: fadeInLeft 0.3s ease-out forwards;
            opacity: 0;
            transform: translateX(-10px);
        }

            .nav-item:nth-child(1) {
                animation-delay: 0.1s;
            }

            .nav-item:nth-child(2) {
                animation-delay: 0.15s;
            }

            .nav-item:nth-child(3) {
                animation-delay: 0.2s;
            }

            .nav-item:nth-child(4) {
                animation-delay: 0.25s;
            }

            .nav-item:nth-child(5) {
                animation-delay: 0.3s;
            }

            .nav-item:nth-child(6) {
                animation-delay: 0.35s;
            }

        @@keyframes fadeInLeft {
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* Professional scrollbar */
        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: var(--background-secondary);
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: var(--border-medium);
            border-radius: 3px;
        }

            .sidebar::-webkit-scrollbar-thumb:hover {
                background: var(--text-muted);
            }

    </style>
</head>
<body>
    <!-- Professional Header -->
    <header class="corporate-header">
        <div class="header-content">
            <!-- Brand Section -->
            <div class="brand-section">
                <button class="mobile-menu-btn" id="mobileMenuBtn">
                    <span class="action-icon">☰</span>
                </button>
                <img src="~/Content/Images/Brotherlg.jpg" alt="Brother Logo" class="company-logo" />
                <div class="brand-text">
                    <div class="system-name">Test Run System</div>
                    <div class="company-name">Brother Industries Vietnam</div>
                </div>
            </div>

            <!-- Navigation Section -->
            <div class="nav-section">
                <!-- User Information - MODIFIED for automatic login -->
                @if (currentUser != null)
                {
                    <div class="user-info">
                        <div class="greeting">
                            @if (!string.IsNullOrWhiteSpace(currentUser.Name))
                            {
                                @Html.Raw(HttpContext.GetGlobalResourceObject("Resources", "Hello") + ", <span class=\"user-name\">" + currentUser.Name + "</span>")
                            }
                            else
                            {
                                @Html.Raw(HttpContext.GetGlobalResourceObject("Resources", "Hello") + ", <span class=\"user-name\">" + currentUser.ADID + "</span>")
                            }
                        </div>
                        <div class="user-details">
                            <div class="user-dept-title">@currentUser.DeptCode - @currentUser.Title</div>
                        </div>
                    </div>

                    <!-- Header Actions - MODIFIED: Only Logout button -->
                    <div class="header-actions">
                        <a href="@Url.Action("Logout","Account")" class="action-btn">
                            <span class="action-icon">↗</span>
                            @HttpContext.GetGlobalResourceObject("Resources", "Logout")
                        </a>
                    </div>
                }
                else
                {
                    <!-- Show Windows user info when no authenticated user -->
                    <div class="windows-user-badge">
                        <div class="windows-icon">⊞</div>
                        <span>@User.Identity.Name.Split('\\').Last()</span>
                    </div>

                    <!-- Register button only - Login is automatic -->
                    <div class="header-actions">
                        <a href="@Url.Action("Register","Account")" class="action-btn primary">
                            @HttpContext.GetGlobalResourceObject("Resources", "Register")
                        </a>
                    </div>
                }
            </div>
        </div>
    </header>

    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay"></div>

    <!-- Professional Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-content">
            <!-- Main Navigation -->
            <nav class="nav-menu">
                <div class="nav-section-title">@HttpContext.GetGlobalResourceObject("Resources", "MainMenu")</div>

                <a href="@Url.Action("Index", "Home")"
                   class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")">
                    <div class="nav-icon">🏠</div>
                    @HttpContext.GetGlobalResourceObject("Resources", "Home")
                </a>

                <div class="nav-section-title">@HttpContext.GetGlobalResourceObject("Resources", "RequestManagement")</div>

                <a href="@Url.Action("Completed", "Request")"
                   class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Request" && ViewContext.RouteData.Values["action"].ToString() == "Completed" ? "active" : "")">
                    <div class="nav-icon">✓</div>
                    @HttpContext.GetGlobalResourceObject("Resources", "CompletedRequests")
                </a>

                <a href="@Url.Action("Rejected", "Request")"
                   class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Request" && ViewContext.RouteData.Values["action"].ToString() == "Rejected" ? "active" : "")">
                    <div class="nav-icon">✕</div>
                    @HttpContext.GetGlobalResourceObject("Resources", "RejectedRequests")
                </a>

                <div class="nav-section-title">@HttpContext.GetGlobalResourceObject("Resources", "SystemManagement")</div>

                <a href="@Url.Action("Index", "User")"
                   class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "User" ? "active" : "")">
                    <div class="nav-icon">👥</div>
                    @HttpContext.GetGlobalResourceObject("Resources", "Users")
                </a>
            </nav>

            <!-- Language Selector -->
            <div class="language-selector">
                <a href="#" class="language-toggle" onclick="toggleLanguageDropdown(event)">
                    <div class="nav-icon">🌐</div>
                    @HttpContext.GetGlobalResourceObject("Resources", "Language") (@(currentLanguage.ToUpper()))
                    <span style="margin-left: auto; font-size: 0.75rem;">▼</span>
                </a>
                <div class="language-dropdown" id="languageDropdown">
                    <a href="@Url.Action("ChangeLanguage", "Language", new { langCode = "vi", returnUrl = Request.Url.ToString() })"
                       class="language-option @(currentLanguage == "vi" ? "active" : "")">
                        <span>🇻🇳</span>
                        Tiếng Việt
                    </a>
                    <a href="@Url.Action("ChangeLanguage", "Language", new { langCode = "ja", returnUrl = Request.Url.ToString() })"
                       class="language-option @(currentLanguage == "ja" ? "active" : "")">
                        <span>🇯🇵</span>
                        日本語
                    </a>
                </div>
            </div>
        </div>
    </aside>

    <!-- Main Content Area -->
    <main class="main-content">
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- NON-sticky footer pinned to the bottom-right of page content -->
        <footer class="corporate-footer">
            Designed by Pham Duc Anh - R&D PE | Brother Vietnam
        </footer>
    </main>

    @Scripts.Render("~/bundles/jquery")
    <script>
        // Professional JavaScript for layout functionality
        document.addEventListener('DOMContentLoaded', function () {
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const sidebar = document.getElementById('sidebar');
            const mobileOverlay = document.getElementById('mobileOverlay');

            // Mobile menu toggle
            if (mobileMenuBtn) {
                mobileMenuBtn.addEventListener('click', function () {
                    sidebar.classList.toggle('mobile-open');
                    mobileOverlay.classList.toggle('show');
                });
            }

            
            if (mobileOverlay) {
                mobileOverlay.addEventListener('click', function () {
                    sidebar.classList.remove('mobile-open');
                    mobileOverlay.classList.remove('show');
                });
            }

            // Handle window resize
            window.addEventListener('resize', function () {
                if (window.innerWidth > 1024) {
                    sidebar.classList.remove('mobile-open');
                    mobileOverlay.classList.remove('show');
                }
            });
        });

        // Language dropdown functionality
        function toggleLanguageDropdown(event) {
            event.preventDefault();
            event.stopPropagation();
            const dropdown = document.getElementById('languageDropdown');
            dropdown.classList.toggle('show');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function (event) {
            const dropdown = document.getElementById('languageDropdown');
            const isClickInside = event.target.closest('.language-selector');

            if (!isClickInside && dropdown.classList.contains('show')) {
                dropdown.classList.remove('show');
            }
        });

        // Professional navigation highlighting
        document.addEventListener('DOMContentLoaded', function () {
            const navItems = document.querySelectorAll('.nav-item');

            navItems.forEach(item => {
                item.addEventListener('mouseenter', function () {
                    if (!this.classList.contains('active')) {
                        this.style.transform = 'translateX(4px)';
                    }
                });

                item.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateX(0)';
                });
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>