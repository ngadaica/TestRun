@using TrueTestRun.Models
@{
    var currentUser = Session["CurrentUser"] as User;
    var pcUserName = System.Environment.UserName;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title – Test Run</title>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Roboto', 'Segoe UI', Arial, sans-serif;
            background-color: #f4f6fa;
        }

        .navbar {
            background-color: #fff !important;
            color: #0033a0;
            z-index: 1050;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
            height: 56px;
            min-height: 56px;
            border-bottom: 1px solid #e3eafc;
        }

            .navbar .navbar-brand img {
                height: 56px;
                width: auto;
                margin-right: 18px;
                border-radius: 12px;
                background: #fff;
                padding: 6px 18px;
                box-shadow: 0 1px 6px rgba(0,0,0,0.10);
            }

            .navbar .navbar-brand,
            .navbar .nav-link,
            .navbar .navbar-text {
                color: #0033a0 !important;
            }

                .navbar .nav-link.active, .navbar .nav-link:hover {
                    color: #0033a0 !important;
                    font-weight: bold;
                }

                .navbar .navbar-text.hello-highlight {
                    font-size: 1.25rem;
                    font-weight: bold;
                    color: #222 !important;
                    text-shadow: 0 1px 4px rgba(0,0,0,0.10);
                    letter-spacing: 0.5px;
                }

        .sidebar {
            width: 240px;
            background: linear-gradient(180deg, #0033a0 80%, #0055b7 100%);
            min-height: 100vh;
            padding: 1.5rem 0.7rem 1rem 0.7rem;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            box-shadow: 2px 0 8px rgba(0,0,0,0.04);
            display: flex;
            flex-direction: column;
            gap: 2px;
        }

            .sidebar a {
                color: #e3eafc;
                display: flex;
                align-items: center;
                padding: 0.7rem 1.1rem;
                margin-bottom: 6px;
                border-radius: 8px;
                text-decoration: none;
                font-weight: 500;
                transition: background 0.2s, color 0.2s;
                font-size: 1.08rem;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #fff;
                    color: #0033a0 !important;
                    font-weight: 700;
                }

            .sidebar i {
                min-width: 22px;
                text-align: center;
                font-size: 1.15em;
            }

        .main-content {
            margin-left: 240px;
            margin-top: 56px;
            padding: 2.5rem 2.2rem 1.5rem 2.2rem;
            min-height: calc(100vh - 56px); /* Fill viewport minus navbar */
            background: #fff;
            border-radius: 0 0 14px 14px;
            position: relative;
            box-sizing: border-box;
            padding-bottom: 48px; /* Space for footer */
        }

        .card, .main-content {
            border-radius: 14px;
            box-shadow: 0 2px 12px rgba(0,51,160,0.07);
        }

        /* Dashboard card style */
        .dashboard-card {
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.08);
            border: none;
            margin-bottom: 24px;
            padding: 1.5rem 2rem;
            display: flex;
            align-items: center;
            gap: 1.2rem;
        }

            .dashboard-card .icon {
                font-size: 2.5rem;
                margin-right: 1rem;
            }

        .dashboard-card-success {
            background: #eafaf1;
            color: #1e824c;
        }

        .dashboard-card-warning {
            background: #fffbe6;
            color: #e67e22;
        }

        /* Welcome block */
        .dashboard-welcome {
            text-align: center;
            margin: 32px 0 24px 0;
        }

            .dashboard-welcome h2 {
                font-weight: 600;
                color: #1976d2;
            }

            .dashboard-welcome p {
                color: #555;
                font-size: 1.1rem;
            }

            .dashboard-welcome .btn {
                margin-top: 18px;
                font-size: 1.1rem;
                padding: 10px 28px;
            }

        .footer-brother {
            position: absolute;
            right: 18px;
            bottom: 10px;
            left: auto;
            margin: 0;
            background: transparent;
            color: #0033a0;
            text-align: right;
            padding: 0;
            font-size: 0.92rem;
            letter-spacing: 0.2px;
            border-radius: 0;
            box-shadow: none;
            z-index: 9999;
            opacity: 0.7;
            user-select: none;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="@Url.Action("Index", "Home")"
           class="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")">
            <i class="fas fa-chart-line me-2"></i> Trang chủ
        </a>
        <a href="@Url.Action("TruocTestRun", "Request")"
           class="@(ViewContext.RouteData.Values["controller"].ToString() == "Request" && ViewContext.RouteData.Values["action"].ToString() == "TruocTestRun" ? "active" : "")">
            <i class="fas fa-step-forward me-2"></i> Trước Test Run
        </a>
        <a href="@Url.Action("GiuaTestRun", "Request")"
           class="@(ViewContext.RouteData.Values["controller"].ToString() == "Request" && ViewContext.RouteData.Values["action"].ToString() == "GiuaTestRun" ? "active" : "")">
            <i class="fas fa-exchange-alt me-2"></i> Giữa Test Run
        </a>
        <a href="@Url.Action("SauTestRun", "Request")"
           class="@(ViewContext.RouteData.Values["controller"].ToString() == "Request" && ViewContext.RouteData.Values["action"].ToString() == "SauTestRun" ? "active" : "")">
            <i class="fas fa-flag-checkered me-2"></i> Sau Test Run
        </a>
        <a href="@Url.Action("Completed", "Request")"
           class="@(ViewContext.RouteData.Values["controller"].ToString() == "Request" && ViewContext.RouteData.Values["action"].ToString() == "Completed" ? "active" : "")">
            <i class="fas fa-check-circle me-2"></i> Request đã hoàn thành
        </a>
        <a href="@Url.Action("Index", "User")"
           class="@(ViewContext.RouteData.Values["controller"].ToString() == "User" ? "active" : "")">
            <i class="fas fa-users me-2"></i> Users
        </a>
        <a href="#">
            <i class="fas fa-cogs me-2"></i> Settings
        </a>
    </div>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg fixed-top shadow-sm" style="left:240px; width:calc(100% - 240px);">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold d-flex align-items-center" href="@Url.Action("Index", "Request")">
                <img src="~/Content/Images/Brotherlg.jpg" alt="Brother Logo" class="logo-brother" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto"></ul>
                <ul class="navbar-nav ms-auto">
                    @if (pcUserName != null)
                    {
                        <li class="nav-item">
                            <span class="navbar-text hello-highlight me-3" style="color: #222;">
                                Xin chào, @pcUserName!
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout","Account")">
                                <i class="fas fa-sign-out-alt"></i> Đăng xuất
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login","Account")">Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register","Account")">Đăng ký</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="main-content">
        @RenderBody()
        <div class="footer-brother">
            Designed by Pham Duc Anh - R&D PE | Brother Vietnam
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>