@model List<TrueTestRun.Models.Request>

@{
    ViewBag.Title = "Request đã hoàn thành";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4"><i class="fas fa-check-circle text-success me-2"></i>@ViewBag.Title</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Ngày tạo</th>
                        <th scope="col">Bước cuối</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var r in Model)
                        {
                            <tr>
                                <td class="fw-bold">@r.RequestID</td>
                                <td>@r.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @(r.History.Last().DeptCode + " / " + r.History.Last().Role)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-success">
                                        <i class="fas fa-check"></i> Hoàn thành
                                    </span>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary"
                                       href="@Url.Action("Preview","Request", new { id = r.RequestID })">
                                        <i class="fas fa-eye"></i> Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="fas fa-folder-open fa-2x mb-2"></i><br />
                                Không có request nào đã hoàn thành.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>