                        <div class="check-item">
                            <input class="check-input" type="checkbox" name="Fields[DaKiemTra]" value="true" id="chkDaKiemTra">
                            <label class="check-label" for="chkDaKiemTra">
                                3. @HttpContext.GetGlobalResourceObject("Resources", "EPEEEInspection")
                            </label>
