                        <div class="files-header">
                            <span class="files-icon">◑</span> @HttpContext.GetGlobalResourceObject("Resources", "SelectedFiles")
                        </div>
                        <div id="fileList" class="files-list"></div>
                    </div>
                </div>
            </div>

            <!-- BẢNG XÁC NHẬN STEP 0 -->
            <div class="form-card">
                <div class="card-header">
                    <h5><span class="header-icon">◒</span> @HttpContext.GetGlobalResourceObject("Resources", "ConfirmationChecklist")</h5>
                </div>
                <div class="card-body">
                    <!-- Checkbox 1: Đã xác nhận FA sample -->
                    <div class="check-group">
                        <div class="check-item">
                            <input class="check-input" type="checkbox" name="Fields[DaXacNhanFASample]" value="true" id="chkFASample">
                            <label class="check-label" for="chkFASample">
                                1. @HttpContext.GetGlobalResourceObject("Resources", "ConfirmedFASample")
                            </label>
                            <div class="check-subtitle">FAサンプル確認済</div>
                        </div>
