                <div class="card-header">
                    <h5><span class="header-icon">◐</span> @HttpContext.GetGlobalResourceObject("Resources", "GeneralInformation")</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        @Html.Label("NgayPhatHanh", HttpContext.GetGlobalResourceObject("Resources", "ReleaseDate").ToString(), new { @class = "form-label" })
                        <input name="Fields[NgayPhatHanh]" class="form-control" type="date" />
                    </div>
                    <div class="form-group">
                        @Html.Label("MaLinhKien", HttpContext.GetGlobalResourceObject("Resources", "ComponentCode").ToString(), new { @class = "form-label" })
                        <input name="Fields[MaLinhKien]" class="form-control" type="text" />
                    </div>
                    <div class="form-group">
                        @Html.Label("TenLinhKien", HttpContext.GetGlobalResourceObject("Resources", "ComponentName").ToString(), new { @class = "form-label" })
                        <input name="Fields[TenLinhKien]" class="form-control" type="text" />
                    </div>
                    <div class="form-group">
                        @Html.Label("NhaCungCap", HttpContext.GetGlobalResourceObject("Resources", "Supplier").ToString(), new { @class = "form-label" })
                        <input name="Fields[NhaCungCap]" class="form-control" type="text" />
                    </div>
                    <div class="form-group">
                        @Html.Label("SoLuong", HttpContext.GetGlobalResourceObject("Resources", "Quantity").ToString(), new { @class = "form-label" })
                        <input name="Fields[SoLuong]" class="form-control" type="number" />
                    </div>
                    <div class="form-group">
                        @Html.Label("GhiChuChinhSua", HttpContext.GetGlobalResourceObject("Resources", "NotesEdits").ToString(), new { @class = "form-label" })
                        <textarea name="Fields[GhiChuChinhSua]" class="form-control" rows="3"
                                  placeholder="@HttpContext.GetGlobalResourceObject("Resources", "EnterNotesPlaceholder")"></textarea>
                        <div class="form-helper">
                            <span class="helper-icon">◎</span>
                            @HttpContext.GetGlobalResourceObject("Resources", "AdditionalNotes")
                        </div>
                    </div>
                </div>
            </div>

            <!-- UPLOAD TÀI LIỆU - TINH TẾ & NHỎ GỌN -->
            <div class="form-card upload-card">
                <div class="card-header">
                    <h5><span class="header-icon">◉</span> @HttpContext.GetGlobalResourceObject("Resources", "AttachedDocuments")</h5>
                </div>
                <div class="card-body">
                    <div class="upload-area" id="uploadZone">
                        <div class="upload-content">
                            <div class="upload-visual">
                                <span class="upload-icon">◯</span>
                                <div class="upload-text">
                                    <div class="upload-primary">@HttpContext.GetGlobalResourceObject("Resources", "DragDropFiles")</div>
                                    <div class="upload-secondary">@HttpContext.GetGlobalResourceObject("Resources", "SupportedFormats")</div>
                                </div>
                            </div>
                            <div class="upload-action">
                                <label for="documentFiles" class="upload-btn">
                                    <span class="btn-icon">◐</span> @HttpContext.GetGlobalResourceObject("Resources", "SelectFiles")
                                </label>
                                <input type="file" id="documentFiles" name="documentFiles" multiple
                                       accept=".pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg,.txt,.zip,.rar"
                                       class="file-input" />
                            </div>
                        </div>
                    </div>

                    <!-- Danh sách file đã chọn -->
