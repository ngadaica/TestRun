@model TrueTestRun.Models.Request
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Approval Preview - " + Model.RequestID;
    var backUrl = ViewBag.BackUrl as string ?? Url.Action("TruocTestRun", "Request");
    var previewUrl = Url.Action("PreviewImage", "Request", new { id = Model.RequestID });
}

<div class="page-header">
    <div class="page-title-section">
        <h1 class="page-title">✓ Đã phê duyệt thành công</h1>
        <div class="page-subtitle">@Model.RequestID | 承認完了 | Approval Completed</div>
    </div>
</div>

@if (System.Web.HttpContext.Current.IsDebuggingEnabled)
{
    <div class="debug-panel" style="background: #f0f9ff; border: 1px solid #0ea5e9; padding: 1rem; margin-bottom: 1rem; border-radius: 6px;">
        <h6>DEBUG: Step 5 Checkbox Values</h6>
        @{
            var keys = new[] { "LapRapStep4", "TinhNangStep4", "NgoaiQuanStep4" };
            foreach (var k in keys)
            {
                var v = Model.Fields.FirstOrDefault(f => f.Key == k)?.Value ?? "(null)";
                <div>@k: <strong>@v</strong> @(v == "true" ? "✓" : "✗")</div>
            }
        }
        <small>Timestamp: @DateTime.Now.ToString("HH:mm:ss.fff")</small>
    </div>
}

<div class="success-message">
    <div class="success-icon">✅</div>
    <div class="success-content">
        <div class="success-title">Phê duyệt hoàn tất!</div>
        <div class="success-subtitle">承認が完了しました | The approval has been completed successfully</div>
    </div>
</div>

<div class="preview-panel">
    <div class="panel-header">
        <div class="panel-title">
            <span class="panel-icon">◎</span>
             Document Preview
        </div>
    </div>
    <div class="panel-content">
        <div class="preview-container">
            <div id="loadingIndicator" class="loading-spinner" aria-hidden="true" style="display:none;">⏳</div>
            <img id="excelPreviewImage"
                 class="preview-image"
                 src="@previewUrl"
                 alt="Excel Preview for @Model.RequestID" />
        </div>
    </div>
</div>

<div style="text-align:center; margin-top:1.25rem">
    <a href="@backUrl" class="action-btn secondary large">
        <span class="btn-icon">◄</span> Back
    </a>
</div>

@section Scripts {
    <script>
        (function () {
            var basePreviewUrl = '@previewUrl';
            var $img = document.getElementById('excelPreviewImage');
            var $loading = document.getElementById('loadingIndicator');
            var maxRefreshAttempts = 5;

            function refreshPreview(attempt) {
                attempt = attempt || 0;
                if (attempt >= maxRefreshAttempts) {
                    if ($loading) $loading.style.display = 'none';
                    return;
                }
                var ts = new Date().getTime();
                var newSrc = basePreviewUrl + '?t=' + ts + '&refresh=approved&attempt=' + attempt;

                if ($img) {
                    if ($loading && attempt > 0) $loading.style.display = 'block';

                    $img.onerror = function () {
                        setTimeout(function () { refreshPreview(attempt + 1); }, 300 * (attempt + 1));
                    };
                    $img.onload = function () {
                        if ($loading) $loading.style.display = 'none';
                    };
                    $img.src = newSrc;
                }
            }

            document.addEventListener('DOMContentLoaded', function () {
                refreshPreview(0);
                setTimeout(function () { refreshPreview(1); }, 500);
                setTimeout(function () { refreshPreview(2); }, 1500);
                setTimeout(function () { refreshPreview(3); }, 3000);
            });
        })();
    </script>
}

