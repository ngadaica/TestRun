@model TrueTestRun.Models.Request
@{
    ViewBag.Title = $"Staff PCB điền kết quả Step 6 - {Model.RequestID}";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = Session["CurrentUser"] as TrueTestRun.Models.User;
    var currentStep = ViewBag.CurrentStep as TrueTestRun.Models.WorkflowStep;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <span style="font-size:1.2em;">📊</span>
            Staff PCB điền kết quả Step 6 - @Model.RequestID
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("GiuaTestRun", "Request")">
                        <span style="font-size:1em;">🏠</span> Giữa Test Run
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Điền kết quả test run</li>
            </ol>
        </nav>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <span style="font-size:1em;">✅</span> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <span style="font-size:1em;">⚠️</span> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <!-- CỘT FORM - THU NHỎ LẠI -->
    <div class="col-lg-4 col-md-5">
        @using (Html.BeginForm("ProcessApproval", "Approval", FormMethod.Post, new { id = "step6Form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("RequestID", Model.RequestID)

            <!-- FORM KẾT QUẢ TEST RUN -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><span style="font-size:1.1em;">📈</span> Kết quả Test Run</h5>
                </div>
                <div class="card-body">
                    <!-- Radio buttons cho kết quả -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Kết quả:</label>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="KetQuaStep6" value="OK" id="ketQuaOK"
                                   @(Model.Fields.FirstOrDefault(f => f.Key == "KetQuaStep6")?.Value == "OK" ? "checked" : "") />
                            <label class="form-check-label fw-bold text-success" for="ketQuaOK">
                                <span style="font-size:0.9em;">✅</span> OK
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" name="KetQuaStep6" value="NG" id="ketQuaNG"
                                   @(Model.Fields.FirstOrDefault(f => f.Key == "KetQuaStep6")?.Value == "NG" ? "checked" : "") />
                            <label class="form-check-label fw-bold text-danger" for="ketQuaNG">
                                <span style="font-size:0.9em;">❌</span> NG
                            </label>
                        </div>
                    </div>

                    <!-- Thông tin NG -->
                    <div class="result-section mb-4">
                        <h6 class="fw-bold text-danger mb-3">
                            <span style="font-size:0.9em;">⚠️</span>
                            Thông tin NG (nếu có):
                        </h6>

                        <!-- NG số -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <label class="form-label fw-bold small">NG số: r =</label>
                                <input name="NGSo_R_Step6" class="form-control form-control-sm" type="number" min="0"
                                       value="@(Model.Fields.FirstOrDefault(f => f.Key == "NGSo_R_Step6")?.Value ?? "")"
                                       placeholder="r" />
                            </div>
                            <div class="col-6">
                                <label class="form-label fw-bold small">OK số: n =</label>
                                <input name="NGSo_N_Step6" class="form-control form-control-sm" type="number" min="0"
                                       value="@(Model.Fields.FirstOrDefault(f => f.Key == "NGSo_N_Step6")?.Value ?? "")"
                                       placeholder="n" />
                            </div>
                        </div>

                        <!-- Nội dung NG -->
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Nội dung NG:</label>
                            <textarea name="NoiDungNG_Step6" class="form-control form-control-sm" rows="3"
                                      placeholder="Mô tả chi tiết vấn đề NG...">@(Model.Fields.FirstOrDefault(f => f.Key == "NoiDungNG_Step6")?.Value ?? "")</textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mb-3">
                @Html.Partial("_DocumentViewButton", Model.RequestID)
            </div>
            <!-- NÚT SUBMIT -->
            <div class="text-center mb-4">
                <button type="submit" name="action" value="complete" class="btn btn-success btn-lg">
                    <span style="font-size:1em;">✅</span>
                    Hoàn thành và chuyển tiếp
                </button>
                <a href="@Url.Action("GiuaTestRun", "Request")" class="btn btn-secondary btn-lg ms-2">
                    <span style="font-size:1em;">⬅️</span>
                    Quay lại
                </a>
            </div>

        }
    </div>

    <!-- CỘT PREVIEW - MỞ RỘNG RA -->
    <div class="col-lg-8 col-md-7">
        <div class="card sticky-top">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><span style="font-size:1.1em;">📊</span> Preview Excel</h5>
                <small class="text-light">Xem trước form sẽ được cập nhật</small>
            </div>
            <div class="card-body text-center p-3">
                <div class="excel-preview-container-large">
                    <img src="@Url.Action("PreviewImage", "Request", new { id = Model.RequestID })"
                         class="img-fluid excel-preview-enhanced"
                         alt="Excel Preview"
                         id="excelPreviewImage" />
                </div>
                <div class="mt-3">
                    <small class="text-muted">
                        <span style="font-size:0.9em;">🔄</span>
                        Ảnh preview sẽ được cập nhật khi bạn thay đổi thông tin
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Live update preview khi thay đổi input, radio hoặc textarea
            $('#step6Form input, #step6Form textarea').on('change input', function() {
                clearTimeout(window.previewTimeout);
                window.previewTimeout = setTimeout(function() {
                    updatePreview();
                }, 500);
            });

            function updatePreview() {
                var formData = {};

                // Lấy tất cả input fields
                $('#step6Form input[type="text"], #step6Form input[type="number"], #step6Form textarea').each(function() {
                    var name = $(this).attr('name');
                    var value = $(this).val() || '';
                    if (name) {
                        formData[name] = value;
                    }
                });

                // Lấy radio button value
                var selectedResult = $('#step6Form input[name="KetQuaStep6"]:checked').val();
                if (selectedResult) {
                    formData['KetQuaStep6'] = selectedResult;
                }

                // Thêm RequestID và antiforgery token
                formData['RequestID'] = $('input[name="RequestID"]').val();
                formData['__RequestVerificationToken'] = $('input[name="__RequestVerificationToken"]').val();

                console.log('Sending Step 6 form data:', formData);

                $.ajax({
                    url: '@Url.Action("UpdateStep6Preview", "Approval")',
                    type: 'POST',
                    data: formData,
                    success: function(response) {
                        console.log('Server response:', response);
                        if (response.success) {
                            var timestamp = new Date().getTime();
                            $('#excelPreviewImage').attr('src', '@Url.Action("PreviewImage", "Request", new { id = Model.RequestID })' + '?t=' + timestamp);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.log('AJAX Error:', status, error);
                        console.log('Response text:', xhr.responseText);
                    }
                });
            }

            // Form validation
            $('#step6Form').on('submit', function (e) {
                var ketQua = $('#step6Form input[name="KetQuaStep6"]:checked').val();

                if (!ketQua) {
                    alert('Vui lòng chọn kết quả OK hoặc NG!');
                    e.preventDefault();
                    return false;
                }

                if (!confirm('Bạn có chắc chắn muốn hoàn thành và chuyển tiếp đơn này?')) {
                    e.preventDefault();
                    return false;
                }
            });

            // Auto dismiss alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Character counter for textarea
            $('textarea[name="NoiDungNG_Step6"]').on('input', function() {
                var len = $(this).val().length;
                var info = $(this).siblings('.form-text');
                info.html(`<span style="font-size:0.9em;">ℹ️</span> Đã nhập ${len} ký tự. Vui lòng mô tả chi tiết vấn đề nếu có NG.`);
            });

            // Load initial preview
            updatePreview();
        });
    </script>
}

