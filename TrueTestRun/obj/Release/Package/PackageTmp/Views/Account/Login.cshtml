@{
    ViewBag.Title = HttpContext.GetGlobalResourceObject("Resources", "Login").ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="mb-3">
        @Html.Label("ADID", htmlAttributes: new { @class = "form-label" })
        @Html.TextBox("adid", null, new { @class = "form-control" })
        @Html.ValidationMessage("", "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">@HttpContext.GetGlobalResourceObject("Resources", "Login")</button>
    <p class="mt-3">
        @HttpContext.GetGlobalResourceObject("Resources", "DontHaveAccount")
        <a href="@Url.Action("Register","Account")">@HttpContext.GetGlobalResourceObject("Resources", "RegisterHere")</a>
    </p>
}