@model TrueTestRun.Models.Request
@{
    ViewBag.Title = HttpContext.GetGlobalResourceObject("Resources", "CreateNewRequest").ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";
    var allowedDept = (Session["CurrentUser"] as TrueTestRun.Models.User)?.DeptCode;
}

<h2>@HttpContext.GetGlobalResourceObject("Resources", "CreateNewRequest")</h2>
@using (Html.BeginForm("Create", "Request", FormMethod.Post, new { id = "createForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <!-- CỘT FORM - THU NHỎ LẠI -->
        <div class="col-lg-4 col-md-5">
            <!-- THÔNG TIN CƠ BẢN -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><span style="font-size:1.1em;">ℹ️</span> @HttpContext.GetGlobalResourceObject("Resources", "GeneralInformation")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        @Html.Label("NgayPhatHanh", HttpContext.GetGlobalResourceObject("Resources", "ReleaseDate").ToString(), new { @class = "form-label fw-bold" })
                        <input name="Fields[NgayPhatHanh]" class="form-control" type="date" />
                    </div>
                    <div class="mb-3">
                        @Html.Label("MaLinhKien", HttpContext.GetGlobalResourceObject("Resources", "ComponentCode").ToString(), new { @class = "form-label fw-bold" })
                        <input name="Fields[MaLinhKien]" class="form-control" type="text" />
                    </div>
                    <div class="mb-3">
                        @Html.Label("TenLinhKien", HttpContext.GetGlobalResourceObject("Resources", "ComponentName").ToString(), new { @class = "form-label fw-bold" })
                        <input name="Fields[TenLinhKien]" class="form-control" type="text" />
                    </div>
                    <div class="mb-3">
                        @Html.Label("NhaCungCap", HttpContext.GetGlobalResourceObject("Resources", "Supplier").ToString(), new { @class = "form-label fw-bold" })
                        <input name="Fields[NhaCungCap]" class="form-control" type="text" />
                    </div>
                    <div class="mb-3">
                        @Html.Label("SoLuong", HttpContext.GetGlobalResourceObject("Resources", "Quantity").ToString(), new { @class = "form-label fw-bold" })
                        <input name="Fields[SoLuong]" class="form-control" type="number" />
                    </div>
                    <div class="mb-3">
                        @Html.Label("GhiChuChinhSua", HttpContext.GetGlobalResourceObject("Resources", "NotesEdits").ToString(), new { @class = "form-label fw-bold" })
                        <textarea name="Fields[GhiChuChinhSua]" class="form-control" rows="3"
                                  placeholder="@HttpContext.GetGlobalResourceObject("Resources", "EnterNotesPlaceholder")"></textarea>
                        <div class="form-text">
                            <span style="font-size:0.9em;">ℹ️</span>
                            @HttpContext.GetGlobalResourceObject("Resources", "AdditionalNotes")
                        </div>
                    </div>
                </div>
            </div>

            <!-- THÊM: UPLOAD TÀI LIỆU -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><span style="font-size:1.1em;">📎</span> @HttpContext.GetGlobalResourceObject("Resources", "AttachedDocuments")</h5>
                </div>
                <div class="card-body">
                    <div class="upload-zone" id="uploadZone">
                        <div class="upload-icon">
                            <span style="font-size:3em; color: #28a745;">📎</span>
                        </div>
                        <div class="upload-text">
                            <strong>@HttpContext.GetGlobalResourceObject("Resources", "DragDropFiles")</strong>
                            <div class="mt-2">
                                <label for="documentFiles" class="btn btn-outline-success btn-sm">
                                    <span style="font-size:0.9em;">📁</span> @HttpContext.GetGlobalResourceObject("Resources", "SelectFiles")
                                </label>
                                <input type="file" id="documentFiles" name="documentFiles" multiple
                                       accept=".pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg,.txt,.zip,.rar"
                                       style="display: none;" />
                            </div>
                        </div>
                        <div class="upload-info">
                            <small class="text-muted">
                                @HttpContext.GetGlobalResourceObject("Resources", "SupportedFormats")<br>
                                @HttpContext.GetGlobalResourceObject("Resources", "MaxFileSize")
                            </small>
                        </div>
                    </div>

                    <!-- Danh sách file đã chọn -->
                    <div id="selectedFiles" class="mt-3" style="display: none;">
                        <h6 class="fw-bold text-success">
                            <span style="font-size:0.9em;">📋</span> @HttpContext.GetGlobalResourceObject("Resources", "SelectedFiles")
                        </h6>
                        <div id="fileList" class="file-list"></div>
                    </div>
                </div>
            </div>

            <!-- BẢNG XÁC NHẬN STEP 0 -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><span style="font-size:1.1em;">☑️</span> @HttpContext.GetGlobalResourceObject("Resources", "ConfirmationChecklist")</h5>
                </div>
                <div class="card-body">
                    <!-- Checkbox 1: Đã xác nhận FA sample -->
                    <div class="mb-4">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="Fields[DaXacNhanFASample]" value="true" id="chkFASample">
                            <label class="form-check-label fw-bold" for="chkFASample">
                                1. @HttpContext.GetGlobalResourceObject("Resources", "ConfirmedFASample")
                            </label>
                            <div class="small text-muted">FAサンプル確認済</div>
                        </div>
                        <div class="mt-2">
                            <label class="form-label small">@HttpContext.GetGlobalResourceObject("Resources", "Notes")</label>
                            <textarea name="Fields[CommentFASample]" class="form-control form-control-sm" rows="2" placeholder="@HttpContext.GetGlobalResourceObject("Resources", "EnterFASampleNotes")"></textarea>
                        </div>
                    </div>

                    <!-- Checkbox 2: Đã xác nhận lắp ráp trước -->
                    <div class="mb-4">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="Fields[DaXacNhanLapRapTruoc]" value="true" id="chkLapRapTruoc">
                            <label class="form-check-label fw-bold" for="chkLapRapTruoc">
                                2. @HttpContext.GetGlobalResourceObject("Resources", "ConfirmedPreAssembly")
                            </label>
                            <div class="small text-muted">事前組付確認実施済</div>
                        </div>
                        <div class="mt-2">
                            <label class="form-label small">@HttpContext.GetGlobalResourceObject("Resources", "Notes")</label>
                            <textarea name="Fields[CommentLapRapTruoc]" class="form-control form-control-sm" rows="2" placeholder="@HttpContext.GetGlobalResourceObject("Resources", "EnterPreAssemblyNotes")"></textarea>
                        </div>
                    </div>

                    <!-- Checkbox 3: Đã kiểm tra -->
                    <div class="mb-4">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="Fields[DaKiemTra]" value="true" id="chkDaKiemTra">
                            <label class="form-check-label fw-bold" for="chkDaKiemTra">
                                3. @HttpContext.GetGlobalResourceObject("Resources", "EPEEEInspection")
                            </label>
                            <div class="small text-muted">EPE-EEの検査</div>
                        </div>
                        <div class="mt-2">
                            <label class="form-label small">@HttpContext.GetGlobalResourceObject("Resources", "Notes")</label>
                            <textarea name="Fields[CommentDaKiemTra]" class="form-control form-control-sm" rows="2" placeholder="@HttpContext.GetGlobalResourceObject("Resources", "EnterInspectionNotes")"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <!-- NÚT SUBMIT -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">
                    <span style="font-size:1em;">✅</span>
                    @HttpContext.GetGlobalResourceObject("Resources", "CreateAndSubmit")
                </button>
                <a href="@Url.Action("TruocTestRun", "Request")" class="btn btn-secondary btn-lg ms-2">
                    <span style="font-size:1em;">❌</span>
                    @HttpContext.GetGlobalResourceObject("Resources", "Cancel")
                </a>
            </div>
        </div>

        <!-- CỘT PREVIEW - MỞ RỘNG RA -->
        <div class="col-lg-8 col-md-7">
            <div class="card sticky-top">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><span style="font-size:1.1em;">👁️</span> @HttpContext.GetGlobalResourceObject("Resources", "ExcelPreview")</h5>
                    <small class="text-light">@HttpContext.GetGlobalResourceObject("Resources", "PreviewWillUpdate")</small>
                </div>
                <div class="card-body text-center p-3">
                    <div class="excel-preview-container-large">
                        <img id="excelPreview"
                             src="@Url.Action("GeneratePreviewImage", "Request")"
                             class="img-fluid excel-preview-enhanced"
                             alt="Excel Preview" />
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <span style="font-size:0.9em;">ℹ️</span>
                            @HttpContext.GetGlobalResourceObject("Resources", "PreviewAutoUpdate")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Existing preview code...
            function debounce(func, delay) {
                let timeout;
                return function (...args) {
                    const context = this;
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func.apply(context, args), delay);
                };
            }

            const updatePreview = () => {
                const formData = $('#createForm').serialize();
                console.log('Updating preview with data:', formData);

                $.ajax({
                    url: '@Url.Action("LivePreviewData", "Request")',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        console.log('LivePreviewData response:', response);
                        if (response && response.success) {
                            const newSrc = '@Url.Action("GeneratePreviewImage", "Request")' + '?t=' + new Date().getTime();
                            console.log('Updating preview image to:', newSrc);
                            $('#excelPreview').attr('src', newSrc);
                        } else {
                            console.error('LivePreviewData failed:', response);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('AJAX error:', status, error);
                        console.error('Response text:', xhr.responseText);
                    }
                });
            };

            // THÊM: File Upload Logic
            let selectedFiles = [];

            // Drag and Drop
            $('#uploadZone').on('dragover', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).addClass('drag-over');
            });

            $('#uploadZone').on('dragleave', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).removeClass('drag-over');
            });

            $('#uploadZone').on('drop', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).removeClass('drag-over');

                const files = e.originalEvent.dataTransfer.files;
                handleFiles(files);
            });

            // File Input Change
            $('#documentFiles').on('change', function() {
                handleFiles(this.files);
            });

            function handleFiles(files) {
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];

                    // Validate file size (10MB)
                    if (file.size > 10 * 1024 * 1024) {
                        alert('@HttpContext.GetGlobalResourceObject("Resources", "FileTooLarge")'.replace('{0}', file.name));
                        continue;
                    }

                    // Validate file type
                    const allowedTypes = ['.pdf', '.doc', '.docx', '.xls', '.xlsx', '.png', '.jpg', '.jpeg', '.txt', '.zip', '.rar'];
                    const fileExt = '.' + file.name.split('.').pop().toLowerCase();

                    if (!allowedTypes.includes(fileExt)) {
                        alert('@HttpContext.GetGlobalResourceObject("Resources", "FileNotSupported")'.replace('{0}', file.name));
                        continue;
                    }

                    selectedFiles.push(file);
                }

                updateFileList();
            }

            function updateFileList() {
                if (selectedFiles.length === 0) {
                    $('#selectedFiles').hide();
                    return;
                }

                $('#selectedFiles').show();
                let html = '';

                selectedFiles.forEach((file, index) => {
                    const fileSize = formatFileSize(file.size);
                    const fileIcon = getFileIcon(file.name);

                    html += `
                        <div class="file-item" data-index="${index}">
                            <div class="file-info">
                                <span class="file-icon">${fileIcon}</span>
                                <div class="file-details">
                                    <div class="file-name">${file.name}</div>
                                    <div class="file-size">${fileSize}</div>
                                </div>
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-danger remove-file" data-index="${index}">
                                <span style="font-size:0.8em;">🗑️</span>
                            </button>
                        </div>
                    `;
                });

                $('#fileList').html(html);
            }

            // Remove file
            $(document).on('click', '.remove-file', function() {
                const index = $(this).data('index');
                selectedFiles.splice(index, 1);
                updateFileList();
            });

            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }

            function getFileIcon(fileName) {
                const ext = fileName.split('.').pop().toLowerCase();
                const icons = {
                    'pdf': '📄',
                    'doc': '📝', 'docx': '📝',
                    'xls': '📊', 'xlsx': '📊',
                    'png': '🖼️', 'jpg': '🖼️', 'jpeg': '🖼️',
                    'txt': '📃',
                    'zip': '📦', 'rar': '📦'
                };
                return icons[ext] || '📎';
            }

            // SỬA: Form submit với files - đơn giản hóa
            $('#createForm').on('submit', function(e) {
                if (selectedFiles.length > 0) {
                    // SỬA: ĐỒNG BỘ HÓA FILES VỚI INPUT ELEMENT
                    const dt = new DataTransfer();
                    selectedFiles.forEach(file => dt.items.add(file));
                    document.getElementById('documentFiles').files = dt.files;

                    // Cho phép form submit bình thường thay vì AJAX
                    console.log('Submitting form with', selectedFiles.length, 'files');
                    return true; // Cho phép submit bình thường
                }
                // Nếu không có file, submit bình thường
                return true;
            });

            // Existing code...
            $('#createForm input, #createForm select, #createForm textarea').on('keyup change', debounce(updatePreview, 500));
            updatePreview();

            $('#excelPreview').on('error', function() {
                console.error('Failed to load preview image');
                $(this).attr('src', 'data:image/svg+xml;base64,');
            });

            $('textarea[name="Fields[GhiChuChinhSua]"]').on('input', function() {
                var len = $(this).val().length;
                var info = $(this).siblings('.form-text');
                info.html(`<span style="font-size:0.9em;">ℹ️</span> @HttpContext.GetGlobalResourceObject("Resources", "CharactersEntered")`.replace('{0}', len) + ' @HttpContext.GetGlobalResourceObject("Resources", "AdditionalNotes")');
            });
        });
    </script>
}

