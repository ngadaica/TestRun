@model List<TrueTestRun.Models.Request>

@{
    ViewBag.Title = HttpContext.GetGlobalResourceObject("Resources", "CompletedRequestsTitle").ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4"><span style="font-size:1.2em;">✅</span> @ViewBag.Title</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">@HttpContext.GetGlobalResourceObject("Resources", "CreatedDate")</th>
                        <th scope="col">@HttpContext.GetGlobalResourceObject("Resources", "LastStep")</th>
                        <th scope="col">@HttpContext.GetGlobalResourceObject("Resources", "Status")</th>
                        <th scope="col">@HttpContext.GetGlobalResourceObject("Resources", "Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var r in Model)
                        {
                            <tr>
                                <td class="fw-bold">@r.RequestID</td>
                                <td>@r.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @(r.History.Last().DeptCode + " / " + r.History.Last().Role)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-success">
                                        <span style="font-size:0.9em;">✓</span> @HttpContext.GetGlobalResourceObject("Resources", "Completed")
                                    </span>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary"
                                       href="@Url.Action("Preview","Request", new { id = r.RequestID })">
                                        <span style="font-size:0.9em;">👁️</span> @HttpContext.GetGlobalResourceObject("Resources", "ViewDetails")
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <span style="font-size:2em;">📁</span><br />
                                @HttpContext.GetGlobalResourceObject("Resources", "NoCompletedRequests")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>