@model TrueTestRun.Models.Request
@{
    ViewBag.Title = $"Chỉnh sửa Request {Model.RequestID}";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = Session["CurrentUser"] as TrueTestRun.Models.User;
    int editStepIndex = ViewBag.EditStepIndex ?? 0;
    string editReason = ViewBag.EditReason ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="fas fa-edit text-warning me-2"></i>
            Chỉnh sửa Request @Model.RequestID
        </h2>
        @if (!string.IsNullOrEmpty(editReason))
        {
            <div class="alert alert-warning mt-2">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @editReason
            </div>
        }
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Request")">
                        <i class="fas fa-home me-1"></i>Trang chủ
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Detail", "Request", new { id = Model.RequestID })">
                        Chi tiết Request
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    Chỉnh sửa @(editStepIndex == 0 ? "Step 0" : $"Step {editStepIndex}")
                </li>
            </ol>
        </nav>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@using (Html.BeginForm("Edit", "Request", FormMethod.Post, new { id = "editForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RequestID)
    @Html.Hidden("EditStepIndex", editStepIndex)

    <div class="row">
        <div class="col-md-6">
            @if (editStepIndex == 0)
            {
                @* STEP 0: THÔNG TIN CƠ BẢN *@
                @Html.Partial("_EditStep0", Model)
            }
            else if (editStepIndex == 2)
            {
                @* STEP 2: PCB STAFF FORM *@
                @Html.Partial("_EditStep2", Model)
            }
            else if (editStepIndex == 4)
            {
                @* STEP 4: PCB STAFF FORM *@
                @Html.Partial("_EditStep4", Model)
            }
            else if (editStepIndex == 6)
            {
                @* STEP 6: PCB STAFF KẾT QUẢ *@
                @Html.Partial("_EditStep6", Model)
            }
            else if (editStepIndex == 8)
            {
                @* STEP 8: EE STAFF FORM *@
                @Html.Partial("_EditStep8", Model)
            }
            else
            {
                @* FALLBACK: STEP 0 *@
                @Html.Partial("_EditStep0", Model)
            }

            <!-- NÚT SUBMIT -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-save me-2"></i>
                    Lưu thay đổi
                </button>
                <a href="@Url.Action("Detail", "Request", new { id = Model.RequestID })" class="btn btn-secondary btn-lg ms-2">
                    <i class="fas fa-times me-2"></i>
                    Hủy
                </a>
            </div>
        </div>

        <!-- CỘT PREVIEW -->
        <div class="col-md-6">
            <div class="card sticky-top">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-eye me-2"></i> Preview Excel</h5>
                    <small class="text-light">
                        Đang chỉnh sửa Step @editStepIndex - Preview sẽ tự động cập nhật
                    </small>
                </div>
                <div class="card-body text-center">
                    <div class="excel-preview-container">
                        <img id="excelPreview"
                             src="@Url.Action("PreviewImage", "Request", new { id = Model.RequestID })"
                             class="img-fluid border rounded shadow-sm excel-preview-large"
                             alt="Excel Preview" />
                    </div>
                    <div class="mt-2">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i>
                            Preview hiển thị dữ liệu hiện tại và sẽ cập nhật khi bạn thay đổi
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            function debounce(func, delay) {
                let timeout;
                return function (...args) {
                    const context = this;
                    clearTimeout(timeout);
                    timeout = setTimeout(() => func.apply(context, args), delay);
                };
            }

            const updatePreview = () => {
                const formData = $('#editForm').serialize();

                // SỬA: Cập nhật session trước khi refresh preview
                $.ajax({
                    url: '@Url.Action("LivePreviewData", "Request")',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            // Sau khi cập nhật session, refresh preview image với timestamp để tránh cache
                            const timestamp = new Date().getTime();
                            $('#excelPreview').attr('src', '@Url.Action("PreviewImage", "Request", new { id = Model.RequestID })' + '?t=' + timestamp);
                        }
                    },
                    error: function() {
                        console.log('Error updating preview session');
                    }
                });
            };

            // Cập nhật preview khi thay đổi input, checkbox và textarea
            $('#editForm input, #editForm select, #editForm textarea').on('keyup change', debounce(updatePreview, 500));

            // Auto dismiss alerts after 5 seconds
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}

<style>
    .excel-preview-container {
        background: #f8f9fa;
        border: 2px dashed #dee2e6;
        border-radius: 8px;
        padding: 15px;
        margin: 0 auto;
    }

    .excel-preview-large {
        max-width: 100%;
        min-height: 500px;
        max-height: 800px;
        border-radius: 4px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .sticky-top {
        top: 20px;
    }

    @@media (max-width: 767.98px) {
        .excel-preview-large {
            min-height: 300px;
            max-height: 500px;
        }

        .sticky-top {
            position: static !important;
        }
    }
</style>